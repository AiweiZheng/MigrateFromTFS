@{
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="voffset3">Accounts</h2>
@Html.ActionLink("New Account", "New", "Admin", new { @class = "btn btn-primary" })
<div class="voffset4"></div>
<table id="Account" class="table table-bordered table-hover col-lg-12">
    <thead>
    <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Role</th>
        <th>Activated</th>
        <th>Description</th>
        <th>(De)activate</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>
@Html.AntiForgeryToken()

<!-- Popup for user description-->
<div class="modal fade" id="descriptionModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="descriptionFor" class="modal-title">Modal title</h4>
            </div>

            <div class="modal-body">
            
                <textarea id ="user-description" cols="200" rows="5" ></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="submit" class="btn btn-primary">Save changes</button>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->


@section scripts
{
    @Html.Partial("_RolesTemplate")
    <script>
        $(document).ready(function () {
            AccountTableController.init("#Account");
            AccountStatusController.init("#Account");
            AccountRoleController.init("table", "#roles-template");
            AccountDescriptionConctroller.init("#descriptionModel");
        });

    </script>
}
